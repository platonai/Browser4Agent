{
  "skill": {
    "id": "data-validation",
    "version": "1.0.0",
    "enabled": true
  },
  "rules": {
    "email": {
      "pattern": "^[A-Za-z0-9+_.-]+@(.+)$",
      "description": "Valid email format",
      "examples": {
        "valid": ["user@example.com", "test+tag@gmail.com"],
        "invalid": ["invalid@", "@example.com", "not-an-email"]
      }
    },
    "required": {
      "description": "All fields must be non-null and non-blank",
      "check_null": true,
      "check_blank": true
    },
    "phone": {
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "description": "Valid phone number in E.164 format",
      "examples": {
        "valid": ["+14155552671", "14155552671"],
        "invalid": ["123", "abc123"]
      }
    },
    "url": {
      "pattern": "^https?://.*",
      "description": "Valid HTTP/HTTPS URL",
      "examples": {
        "valid": ["https://example.com", "http://test.org"],
        "invalid": ["ftp://example.com", "not-a-url"]
      }
    }
  },
  "error_messages": {
    "email": "Invalid email format",
    "required": "Required fields are missing",
    "phone": "Invalid phone number format",
    "url": "Invalid URL format"
  },
  "defaults": {
    "fail_fast": false,
    "return_all_errors": true
  }
}
